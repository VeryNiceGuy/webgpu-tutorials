        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "types": ["@webgpu/types"]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
